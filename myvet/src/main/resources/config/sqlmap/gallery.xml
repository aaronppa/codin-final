		<result column="sys_name" property="sysName"/>
		<result column="file_path" property="filePath"/>
		<result column="file_size" property="fileSize"/>
	</resultMap>

	
	<select id="selectGallery" parameterType="SearchGallery" resultMap="galleryMap">
		select *
		  from gallery
		  	<choose>
	  			<when test="sort == 0">
	  				where title like CONCAT('%',#{keyword},'%') or content like CONCAT('%',#{keyword},'%') or writer_no like CONCAT('%',#{keyword},'%')
	  			</when>
	  			<when test="sort == 1">
	  				where title like CONCAT('%',#{keyword},'%')
	  			</when>
	  			<when test="sort == 2">
	  				where content like CONCAT('%',#{keyword},'%')
	  			</when>
	  			<when test="sort == 3">
	  				where writer_no like CONCAT('%', #{keyword},'%')
	  			</when>
	  			<when test="sort == 4">
	  				where title like CONCAT('%', #{keyword},'%') or content like CONCAT('%', #{keyword},'%')
	  			</when>
  			</choose>
		 order by gallery_no desc		
		 limit #{begin}, #{pageNum}
	</select>
	<select id="selectGalleryByNo" parameterType="int" resultMap="galleryMap">
		select *
		  from gallery
		 where gallery_no = #{galleryNo}
	</select>
	<insert id="insertGallery" parameterType="gallery">
		insert into gallery(
		board_code, writer_no, title, content
			)values(
		#{boardCode}, #{writerNo}, #{title}, #{content}
		)
	</insert>
	<update id="updateGallery" parameterType="gallery">
		update gallery
		   set title = #{title},
		       content = #{content}
		 where gallery_no = #{galleryNo}
	</update>
	<delete id="deleteGallery" parameterType="int">
		delete 
		  from gallery
		 where gallery_no=#{galleryNo}
	</delete>
	
	<update id="updateViewCnt" parameterType="int">
		update gallery
		   set view_cnt = view_cnt+1
		 where gallery_no = #{galleryNo}
	</update>
	
	<select id="countGallery" resultType="int">
		select count(*)
		  from gallery
	</select>
	
<!-- 	댓글 --> 
